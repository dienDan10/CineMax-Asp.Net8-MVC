@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Complete Registration";
}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
        <div class="card-header bg-primary p-4 border-0">
          <h2 class="text-white text-center mb-0 fw-light">
            <i class="fas fa-user-plus me-2"></i>Complete Registration
          </h2>
        </div>

        <div class="card-body p-4 p-lg-5">
          <!-- Success Message -->
          <div class="alert alert-success mb-4">
            <div class="d-flex align-items-center">
              <i class="fas fa-check-circle me-3 fs-4 text-success"></i>
              <div>
                <h5 class="mb-1">Successfully Authenticated</h5>
                <p class="mb-0">You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.</p>
              </div>
            </div>
          </div>

          <!-- Instructions -->
          <p class="text-muted mb-4">
            <i class="fas fa-info-circle me-2"></i>
            Please enter your name below and click the Register button to complete the process.
          </p>

          <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger p-2 mb-4" role="alert"></div>

            <!-- Email Field (Read Only) -->
            <div class="form-floating mb-4">
              <input asp-for="Input.Email" class="form-control border-0 border-bottom rounded-0 bg-light" 
                     autocomplete="email" placeholder="Your email address" readonly />
              <label asp-for="Input.Email" class="form-label">
                <i class="fas fa-envelope text-primary me-1"></i> Email Address
              </label>
              <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Name Field -->
            <div class="form-floating mb-4">
              <input asp-for="Input.Name" class="form-control border-0 border-bottom rounded-0" 
                     autocomplete="name" placeholder="Please enter your name" />
              <label asp-for="Input.Name" class="form-label">
                <i class="fas fa-user text-primary me-1"></i> Full Name
              </label>
              <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mt-5">
              <button type="submit" class="btn btn-primary btn-lg py-3 rounded-pill">
                <i class="fas fa-check-circle me-2"></i> Complete Registration
              </button>
            </div>
          </form>
        </div>

        <div class="card-footer text-center py-3 bg-light">
          <div class="small">
            <i class="fab fa-@Model.ProviderDisplayName.ToLower() me-2"></i>
            Linking your @Model.ProviderDisplayName account
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side Image/Info -->
    <div class="col-lg-4 mt-4 mt-lg-0 d-flex align-items-center">
      <div class="card border-0 shadow-lg rounded-3 bg-light w-100">
        <div class="card-body p-4 text-center">
          <div class="py-4">
            <i class="fas fa-link text-primary mb-3" style="font-size: 3rem;"></i>
            <h4 class="mb-3">Almost Done!</h4>
            <p class="text-muted mb-0">
              You're just one step away from connecting your @Model.ProviderDisplayName account with our service.
            </p>
          </div>

          <hr class="my-4">

          <div class="text-start">
            <h5 class="mb-3"><i class="fas fa-shield-alt text-primary me-2"></i> What happens next?</h5>
            <ul class="list-unstyled">
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Secure single sign-on</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Faster login experience</li>
              <li><i class="fas fa-check text-success me-2"></i> Enhanced account security</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
