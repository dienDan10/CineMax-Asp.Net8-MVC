@model IEnumerable<SelectListItem>

<div class="container mt-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fa-solid fa-money-check-dollar me-2"></i>User Bookings</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- Filter Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form id="filterForm">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="input-group mb-3">
                                    <span class="input-group-text">Date Range</span>
                                    <input type="date" id="startDate" name="startDate" class="form-control">
                                    <span class="input-group-text">to</span>
                                    <input type="date" id="endDate" name="endDate" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <select asp-items="@Model" id="theater" name="theaterId" class="form-select d-inline-block w-auto">
                                    <option value="0">All Theaters</option>
                                </select>
                                <button type="submit" id="applyFilter" class="btn btn-primary ms-2">
                                    <i class="fas fa-filter me-1"></i> Apply Filter
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- DataTable Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <table id="bookingsTable" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Booking ID</th>
                                <th>Amount</th>
                                <th>Payment Method</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Data will be dynamically loaded -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Set default date range
            let today = new Date();
            let futureDate = new Date();
            futureDate.setDate(today.getDate() + 14);

            $("#startDate").val(today.toISOString().split("T")[0]);
            $("#endDate").val(futureDate.toISOString().split("T")[0]);

            // Initialize DataTable
            let table = $("#bookingsTable").DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: "/Admin/Bookings/PaymentsList",
                    type: "GET",
                    data: function (d) {
                        d.startDate = $("#startDate").val();
                        d.endDate = $("#endDate").val();
                        d.theaterId = $("#theater").val();
                    }
                },
                columns: [
                    { data: "userName" },
                    { data: "paymentId" },
                    { data: "amount" },
                    { data: "paymentMethod" },
                    { data: "paymentStatus" },
                    { data: "paymentDate",
                          render: function (data, type, row) {
                            if (data) {
                                let date = new Date(data);
                                return date.toLocaleString("en-GB", {
                                    day: "2-digit",
                                    month: "2-digit",
                                    year: "numeric",
                                    hour: "2-digit",
                                    minute: "2-digit",
                                    hour12: false
                                });
                            }
                            return "";
                        }
                    },
                    {
                        data: "paymentId",
                        render: function (data, type, row) {
                            return `<a href='/Admin/Bookings/Details?paymentId=${data}' class='btn btn-info btn-sm'>Details</a>`;
                        }
                    }
                ],
                paging: true,
                searching: true
            });

            // Apply filter event
            $("#filterForm").submit(function (e) {
                e.preventDefault();
                table.ajax.reload();
            });
        });
    </script>

}